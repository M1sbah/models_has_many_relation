<div class= "row">
    <div class="col-lg-4 mt-5">
        <div class="card">
            <div class="card-title">
                <h4 class = "text-center text-muted">Add Organization</h4>
            </div>
            <div class="card-body">
                <%= render 'organizations/form', url: user_organizations_path(@user) %>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card mt-5">
            <div class="col-lg-10 mx-auto mt-5">
                <div class="card">
                    <div class="card-title">
                        <h3 class="text-center"> User Details </h3>
                    </div>
                    <div class="card-body">
                        <h5>Username:- <%= @user.name %> </h5>
                        <small><i class="bi bi-house-door-fill" ></i> <%= @user.address%> </small>
                    </div>
                </div>
                <hr class= " mt-3 ">
                <h4 class="text-center">Organizations</h4>
                <%= render 'organizations/organizations_list', organizations: @user.organizations %>
            </div>
        </div>
    </div>
</div>