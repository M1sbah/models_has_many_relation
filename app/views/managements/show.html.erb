<div class= "row">
    <div class="col-lg-4 mt-5">
        <div class="card">
            <div class="card-title">
                <h4 class = "text-center text-muted">Add Activity</h4>
            </div>
            <div class="card-body">
                <%= render 'activities/form', url: management_activities_path(@management) %>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card mt-5">
            <div class="col-lg-10 mx-auto mt-5">
                <div class="card">
                    <div class="card-title">
                        <h3 class="text-center"> Management Details </h3>
                    </div>
                    <div class="card-body">
                        <h5>Management Name:- <%= @management.name %> </h5>
                        <small><i class="bi bi-phone" ></i> <%= @management.contact%> </small>
                    </div>
                </div>
                <hr class= " mt-3 ">
                <h4 class="text-center">Activities</h4>
                <%= render 'activities/activities_list', activities: @management.activities %>
            </div>
        </div>
    </div>
</div>